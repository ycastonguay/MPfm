<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- disabled -->
  <item
    android:state_enabled="false"
    android:state_focused="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval" >
      <gradient
          android:angle="180"
          android:endColor="@color/background"
          android:startColor="@color/background" />
      <stroke
          android:width="1dp"
          android:color="#666D899B" />
    </shape>
  </item>
  <!-- pressed -->
  <item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval" >
      <gradient
          android:angle="180"
          android:endColor="#9936454F"
          android:startColor="#AA36454F" />
      <stroke
          android:width="1dp"
          android:color="#DD6D899B" />
    </shape>
  </item>
  <!-- focused -->
  <item android:state_focused="true">
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >
  <gradient
      android:angle="180"
      android:endColor="#9936454F"
      android:startColor="#AA36454F" />
  <stroke
      android:width="1dp"
      android:color="#DD6D899B" />
</shape>
  </item>
  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval" >
      <gradient
          android:angle="180"
          android:endColor="#3336454F"
          android:startColor="#6636454F" />
      <stroke
          android:width="1dp"
          android:color="#666D899B" />
    </shape>
  </item>
</selector>
