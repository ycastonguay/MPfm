<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@android:id/widget_frame"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="64dp">
  <LinearLayout
    android:id="@+id/seekBarPreference_layoutTitle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">
    <TextView
      android:id="@+id/seekBarPreference_lblTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginRight="4dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"
      android:text="Preference Title"
      android:textSize="18dp"
      android:textColor="#FFFFFF"/>
    <TextView
      android:id="@+id/seekBarPreference_lblValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:gravity="right"
      android:text="100 ms"
      android:textSize="16dp"
      android:textColor="#FFFFFF"/>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/seekBarPreference_layoutSeekBar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seekBarPreference_layoutTitle"
    android:paddingTop="2dp"
    android:paddingBottom="6dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/seekBarPreference_lblMinValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="4dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"
      android:text="10 ms"
      android:textSize="14dp"
      android:textColor="#AAAAAA"/>
    <SeekBar
      android:id="@+id/seekBarPreference_seekBar"
      android:layout_width="0dp"
      android:layout_height="20dp"
      android:layout_weight="1"
      android:layout_margin="4dp"
      android:progressDrawable="@drawable/progress"
      android:thumb="@drawable/thumb"
      android:thumbOffset="8dp" />
    <TextView
      android:id="@+id/seekBarPreference_lblMaxValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:gravity="right"
      android:text="100 ms"
      android:textSize="14dp"
      android:textColor="#AAAAAA"/>
  </LinearLayout>
</RelativeLayout>
