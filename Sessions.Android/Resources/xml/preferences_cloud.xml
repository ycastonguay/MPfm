<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
  android:title="Cloud Preferences"
  android:icon="@drawable/actionbar_cloud">
  <PreferenceCategory
    android:title="Cloud Services"
    android:key="cloud_services">
    <Preference
      android:title="Login to Dropbox"      
      android:icon="@drawable/actionbar_dropbox"
      android:key="dropbox_login" />
    <Preference
      android:key="cloud_services_footer"
      android:title=""
      android:icon="@android:color/transparent"
      android:summary="The cloud service will be used to synchronize data between devices, excluding audio files. A small amount of bandwidth (~1kb/call) is used every time you update a playlist, update a preset or play a new song."
      android:selectable="false"
      android:enabled="false" />
  </PreferenceCategory>
  <PreferenceCategory
    android:title="Sync"
    android:key="cloud_sync">
    <CheckBoxPreference
      android:key="cloud_resume_playback"
      android:title="Enable Resume Playback"
      android:icon="@drawable/actionbar_resume"
      android:summary="Resume playback from other devices"
      android:defaultValue="true" />
    <CheckBoxPreference
      android:key="cloud_sync_playlists"
      android:title="Sync Playlists"
      android:icon="@android:color/transparent"
      android:defaultValue="true" />
    <CheckBoxPreference
      android:key="cloud_sync_presets"
      android:title="Sync Equalizer Presets"
      android:icon="@android:color/transparent"
      android:defaultValue="true" />
    <CheckBoxPreference
      android:key="cloud_sync_wifi_only"
      android:title="Enable Resume Playback"
      android:icon="@android:color/transparent"
      android:defaultValue="true" />
  </PreferenceCategory>
</PreferenceScreen>