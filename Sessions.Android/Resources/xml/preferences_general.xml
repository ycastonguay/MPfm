<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sessionsapp="http://sessionsapp.org"
  android:title="General Preferences"
  android:icon="@drawable/actionbar_settings">
  <PreferenceCategory
    android:title="Update Frequency"
    android:key="update_frequency">
    <org.sessionsapp.android.SeekBarPreference
      android:key="update_frequency_song_position"
      android:title="Song Position"
      android:icon="@null"
      android:max="100"
      android:defaultValue="80"
      sessionsapp:min="10"
      sessionsapp:units="ms" />
    <org.sessionsapp.android.SeekBarPreference
      android:key="update_frequency_output_meter"
      android:title="Output Meter"
      android:icon="@null"
      android:max="100"
      android:defaultValue="80"
      sessionsapp:min="10"
      sessionsapp:units="ms" />
    <Preference
      android:key="update_frequency_footer"
      android:title=""
      android:icon="@null"
      android:summary="Warning: Lower values require more CPU and memory."
      android:selectable="false"
      android:enabled="false" />
  </PreferenceCategory>
  <PreferenceCategory
    android:title="Peak Files"    
    android:key="peak_files">
    <org.sessionsapp.android.SeekBarPreference
      android:key="peak_files_maximum_folder_size"
      android:title="Maximum Peak Folder Size"
      android:icon="@null"
      android:max="1000"
      android:defaultValue="100"
      sessionsapp:min="50"
      sessionsapp:units="MB" />      
    <Preference
      android:key="peak_files_delete"
      android:icon="@drawable/actionbar_trash"
      android:title="Delete Peak Files" />
    <Preference
      android:key="peak_files_footer"
      android:title=""
      android:icon="@null"
      android:summary="Peak file folder size: 1420 MB"
      android:selectable="false"
      android:enabled="false" />
  </PreferenceCategory>
</PreferenceScreen>