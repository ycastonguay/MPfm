<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>        
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Cabin" />
    <link href='http://fonts.googleapis.com/css?family=Expletus+Sans' rel='stylesheet' type='text/css' />
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=PT+Sans+Narrow:regular,bold" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/fancybox/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />
    <link rel="Shortcut Icon" href="/images/MPFM.ico" />
    <script src="@Url.Content("http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/s3Slider.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/fancybox/jquery.fancybox-1.3.4.js")" type="text/javascript"></script>
    <meta name="title" content="@ViewBag.Title" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-27849695-1']);
        _gaq.push(['_setDomainName', 'mp4m.org']);
        _gaq.push(['_setAllowLinker', true]);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
</head>
<body>
    <div id="container">
        <div id="header">
            <div id="logo"></div>        
            <div id="header_toptile"></div>           
            <div id="header_menu">                
                <a href="/">Overview</a>
                <a href="/features">Features</a>
                <a href="/screenshots">Screenshots</a>
                <a href="/download">Download</a>
                <a href="/license">License</a>
                <a href="/developers">Developers</a>
                <a href="/support">Support</a>                            
                <a href="/blog">Blog</a>
            </div>
            <div id="header_bottomtile">
                <div class="facebook">                    
                    Follow us on <a href="http://www.facebook.com/pages/MPfm-Music-Player-for-Musicians/162671573835061" title="MPfm Facebook Page">Facebook</a><br />
                </div>
                <div class="twitter">
                    Follow us on <a href="http://www.twitter.com/ycastonguay" title="MPfm Twitter Page">Twitter</a>
                </div>                
            </div>
            <div id="header_thirdparty">
                <div style="text-align:center; width:354px; margin-left:auto; margin-right:auto;">
                    <img id="imageMapLibrairies" src="/Images/header_3rdparty.jpg" usemap="#mapLibrairies" alt="" />
                    <map id="mapLibrairies" name="mapLibrairies">
                        <area shape="rect" coords="0,20,75,58" href="http://www.un4seen.com" alt="BASS/BASS.NET Homepage" title="BASS/BASS.NET Homepage" />
                        <area shape="rect" coords="76,20,193,58" href="http://www.sqlite.org" alt="SQLite homepage" title="SQLite homepage" />
                        <area shape="rect" coords="194,20,321,58" href="http://www.famfamfam.com" alt="Famfamfam icons homepage" title="Famfamfam icons homepage" />
                    </map>
                </div>
            </div>
        </div>        
        <div id="body">
            @RenderBody()
        </div>
        <div id="footer">
            MPfm: Music Player for Musicians is © 2011 Yanick Castonguay and is released under the GPLv3 license.
            <div id="footer_smalltext">                                            
                The BASS audio library is © 1999-2011 Un4seen Developments. <span class="footerSeparator">//</span>
                The BASS.NET audio library is © 2005-2011 radio42. <span class="footerSeparator">//</span>
                FamFamFam icons are © 2011 Mark James.
            </div>
            <div id="footer_supersmalltext">
                [Version 1.2.5.0 <span class="footerSeparator">//</span> 2012-01-07]
            </div>
        </div>
    </div>
</body>
</html>
