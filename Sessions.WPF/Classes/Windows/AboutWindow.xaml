<base:BaseWindow x:Class="Sessions.WPF.Classes.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:base="clr-namespace:Sessions.WPF.Classes.Windows.Base"
        xmlns:controls="clr-namespace:Sessions.WPF.Classes.Controls"
        WindowStartupLocation="CenterScreen" Background="{DynamicResource BrushBackgroundColor}"
        Title="About Sessions" Height="372" Width="369" Icon="/Sessions.WPF;component/Resources/Icon.ico" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="6">
        </StackPanel>    
        <StackPanel Grid.Row="1" Margin="6">
            <Label x:Name="lblTitle"  Content="Sessions" Foreground="White" FontSize="28" FontFamily="/Resources/Fonts/#Roboto Light" Margin="0" Padding="0" />
            <Label x:Name="lblVersion" Content="Version 1.0" Foreground="#DDDDDD" FontSize="16" FontFamily="/Resources/Fonts/#Roboto Light" Margin="0" Padding="0" />
            <TextBlock x:Name="lblContent" TextWrapping="Wrap" Foreground="#BBBBBB" FontSize="12" FontFamily="/Resources/Fonts/#Roboto Regular" Margin="0,4,0,0" Padding="0" />
        </StackPanel>
    </Grid>
</base:BaseWindow>
