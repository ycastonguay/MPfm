<base:BaseWindow x:Class="Sessions.WPF.Classes.Windows.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:base="clr-namespace:Sessions.WPF.Classes.Windows.Base"
        WindowStartupLocation="CenterScreen"
        Title="SplashWindow" Height="400" Width="500" WindowStyle="None" ResizeMode="NoResize" Topmost="True" Icon="/Sessions.WPF;component/Resources/Icon.ico" ShowInTaskbar="False">
    <Grid Background="{DynamicResource BrushBackgroundColor}">
        <Label x:Name="lblStatus" Content="Loading..." HorizontalAlignment="Left" Margin="4,368,-4,0" VerticalAlignment="Top" Width="500" Foreground="White" FontSize="13" FontFamily="/Resources/Fonts/#Roboto Light" />
        <Image x:Name="imageLogo" Stretch="Uniform" Width="240" Height="60" />
        <Image x:Name="imageLogoFull" Stretch="Uniform" Width="240" Height="60" Opacity="0" />
    </Grid>
</base:BaseWindow>
